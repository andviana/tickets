{% extends 'base.html.twig' %}

{% block title %}Produto index{% endblock %}

{% block body %}
    <h1>Produto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Denominacao</th>
                <th>Valor</th>
                <th>Ativo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <td>{{ produto.id }}</td>
                <td>{{ produto.denominacao }}</td>
                <td>{{ produto.valor }}</td>
                <td>{{ produto.ativo ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_produto_show', {'id': produto.id}) }}">show</a>
                    <a href="{{ path('app_produto_edit', {'id': produto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produto_new') }}">Create new</a>
{% endblock %}
