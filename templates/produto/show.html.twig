{% extends 'base.html.twig' %}

{% block title %}Produto{% endblock %}

{% block body %}
    <h1>Produto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produto.id }}</td>
            </tr>
            <tr>
                <th>Denominacao</th>
                <td>{{ produto.denominacao }}</td>
            </tr>
            <tr>
                <th>Valor</th>
                <td>{{ produto.valor }}</td>
            </tr>
            <tr>
                <th>Ativo</th>
                <td>{{ produto.ativo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produto_index') }}">back to list</a>

    <a href="{{ path('app_produto_edit', {'id': produto.id}) }}">edit</a>

    {{ include('produto/_delete_form.html.twig') }}
