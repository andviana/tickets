{% extends 'base.html.twig' %}

{% block title %} Lotes {% endblock %}
{% block header_title %} Lotes {% endblock %}
{% block body %}

    <div class="container">
        <div class="row my-2">
            <div class="col-12 text-end">
                <a class="btn btn-outline-primary " href="#">
                    <i class="bi bi-tags me-2"></i>
                    Lançar Tickets
                </a>
                <a class="btn btn-primary" href="{{ path('app_lote_new') }}">
                    <i class="bi bi-card-checklist me-2"></i>
                    Novo
                </a>
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <div>Lista de Produtos</div>
                    </div>
                    <div class="card-body">
                        <div>
                            {% for lote in lotes %}
                                <div class="my-4 p-2 rounded shadow" style="border: 1px solid lightgray;">
                                    <div class="d-flex flex-row align-items-center justify-content-between">
                                        <div class="lead fw-bold">
                                            {{ lote.produto }}
                                        </div>
                                        <a class="btn "
                                           href="{{ path('app_lote_show',{'id':lote.id}) }}">
                                            <i class="bi bi-gear"></i>
                                        </a>
                                    </div>
                                    <div class="progress" role="progressbar" aria-label="Success example"
                                         aria-valuenow="{{ lote.registradoTotalPercentual }}" aria-valuemin="0"
                                         aria-valuemax="100">
                                        <div class="progress-bar bg-success"
                                             style="width: {{ lote.registradoTotalPercentual }}%">{{ lote.registradoTotalPercentual }}
                                            %
                                        </div>
                                    </div>
                                    <hr class="mb-2 text-muted"/>
                                    <div class="d-flex flex-row align-items-center justify-content-between">
                                        <div class="text-center w-25">
                                            <i class="bi bi-cash-coin"
                                               style="font-size: 3rem; color: lightgreen"></i>
                                        </div>

                                        <div class="small w-75">
                                            <div class="w-100 d-flex justify-content-between px-2">
                                                <span class="small text-muted">Emitidos:</span>
                                                <span class="fw-semibold ">{{ lote.quantidade }}</span>
                                            </div>
                                            <div class="w-100 d-flex justify-content-between px-2 border-bottom">
                                                <span class="small text-muted">Valor:</span>
                                                <span class="fw-semibold">{{ lote.produto.valor|get_format_money }}</span>
                                            </div>
                                            <div class="w-100 d-flex justify-content-between px-2 mb-3">
                                                <span class="small text-muted">Total:</span>
                                                <span class="text-danger">{{ lote.valorTotalPerspectiva|get_format_money }}</span>
                                            </div>
                                            <div class=" border rounded">
                                                <div class="w-100 d-flex justify-content-between px-2">
                                                    <span class="small text-muted">Registrados:</span>
                                                    <span class="fw-semibold">{{ lote.registradoTotalAbsoluto }}</span>
                                                </div>
                                                <div class="w-100 d-flex justify-content-between px-2">
                                                    <span class="small text-muted">Total:</span>
                                                    <span class="text-danger">{{ lote.valorTotalReal|get_format_money }}</span>
                                                </div>
                                            </div>
                                        </div>
                                        {#                                        <div> #}
                                        {#                                            <a class="btn btn-primary btn-sm" href="#"> #}
                                        {#                                                <i class="bi bi-tags me-2"></i> #}
                                        {#                                                Outro botão #}
                                        {#                                            </a> #}
                                        {#                                        </div> #}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
